<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= event.title %></div>
    <form class="ui form" action="/events/<%= event._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="event[title]" value="<%= event.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="event[image]" value="<%= event.image %>">
        </div>
        <div class="field">
            <label>Event Content</label>
            <textarea name="event[body]"><%= event.body %></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<%- include ("partials/footer") %>