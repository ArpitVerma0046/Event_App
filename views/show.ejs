<%- include ("partials/header") %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= event.title %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src= "<%= event.image %>" >
            <div class="content">
                <span><%= event.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- event.body %></p>
            </div>
            <a class="ui orange basic button" href="/events/<%= event._id %>/edit">Edit</a>
            <form id="delete" action="/events/<%= event._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
    
</div>
<%- include ("partials/footer") %>